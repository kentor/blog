---
ecmaFeatures:
  jsx: true
  modules: true
env:
  browser: true
  es6: true
  node: true
plugins:
  - react
rules:
  comma-dangle: [2, always-multiline]
  curly: [2, multi-line] # Lax curly brace req. for single statement after `if`
  dot-notation: [2, {allowKeywords: true, allowPattern: "[^a-zA-Z]"}]
  no-alert: 0
  no-multi-str: 0 # Allows using \ to break strings into multiple lines
  no-sequences: 0
  no-shadow: 0
  no-unused-expressions: 0 # Allow expr && expr;
  no-unused-vars: [2, args: none]
  no-var: 2
  prefer-const: 2

  ## Style Rules
  array-bracket-spacing: [2, never]
  camelcase: [2, properties: never]
  eol-last: 2
  indent: [2, 2]
  max-len: [2, 80]
  new-cap: 0
  no-multiple-empty-lines: 2
  quotes: [2, single, avoid-escape]
  space-after-keywords: 2
  space-before-function-parentheses: [2, never]
  space-infix-ops: 2

  ## eslint-plguin-react rules
  react/display-name: [2, acceptTranspilerName: true]
  react/jsx-curly-spacing: [2, never]
  react/jsx-no-undef: 2
  react/jsx-quotes: [2, double]
  react/jsx-uses-react: 2
  react/jsx-uses-vars: 2
  react/no-unknown-property: 2
  react/react-in-jsx-scope: 2
  react/self-closing-comp: 2
  react/wrap-multilines: 2
